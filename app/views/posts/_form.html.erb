<ol>
  <%= form_for @post do |f| %>
  <li>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </li>
  <br>
  <li>
    <%= f.label :content %>
    <br>
    <br>
    <%= f.text_area :content %>
  </li>
  <br>
  <li>
    <%= f.label 'Tags' %>
    <br>
    <br>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  </li>
  <br>
  <%= f.submit %>
  <% end %>
</ol>
